model User {
  id        String   @id @default(uuid())
  firstname String?
  lastname  String?
  username  String
  email     String   @unique
  password  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  confirmed Boolean  @default(false)

  role   Role? @relation(fields: [roleId], references: [id])
  roleId Int? @default(1)
}